{
    "compilerOptions": {
        "types": [
            "bun-types",
            "vitest/globals",
            "@types/node",
            "@types/react",
            "@types/react-dom",
            "node"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
